      <h2><%= pluralize(@chirp.errors.count, "error") %> prevented this Chirp from being posted:</h2>

      <ul>
        <% @chirp.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    


<%= form_tag("/chirps", method: :post) do %>
  <div class="form-group">
  <%= label_tag('content', 'Enter Chirp Content:') %>
  <%= text_area_tag('content', @chirp.content, class: "form-control") %>
  </div>
  <%= submit_tag("Chirp!", class: "btn-success") %>
<% end %>